{
  "env": {
    "es6": true,
    "amd": true
  },
  "extends": ["prettier", "prettier/standard"],
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"]
  },
  "globals": {
    "module": true,
    "exports": true,
    "process": true
  }
}
